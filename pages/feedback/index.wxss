/* pages/addDevice/index.wxss */
.device-page-wrapper {
  width: 100vw;
  height: 100vh;
  background: #F4F4F4;
  overflow-y: auto;
}
.device-excharge-type-wrapper {
  width: 714rpx;
  height: 204rpx;
  background: #FFFFFF;
  border-radius: 18rpx;
  margin: 18rpx auto 14rpx;
}
.excharge-type-title {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0,0,0,0.6);
  padding: 34rpx 0 30rpx 28rpx;
}
.excharge-type-data-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 28rpx 34rpx 28rpx;
}
.excharge-type-item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 206rpx;
  height: 68rpx;
  background: #F7F8FA;
  border-radius: 34rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0,0,0,0.8);
}
.excharge-type-icon {
  display: inline-block;
  height: 30rpx;
  width: 30rpx;
  margin-right: 5rpx;
}
.excharge-type-item-select {
  background: #0D7AC2;
  font-weight: 600;
  color: #FFFFFF;
}
.device-excharge-content {
  width: 714rpx;
  height: 440rpx;
  background: #FFFFFF;
  border-radius: 18rpx;
  margin: 0rpx auto 14rpx;
}
.cell-group-content {
  padding: 38rpx 0rpx;
  margin-top: 18rpx;
}
.device-input-style {
  height: 100rpx;
}
.cell-title-style {
  color: var(--field-label-color,#646566);
}
.device-exhcarge-content {
  height: 670rpx;
}
.device-type-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 80rpx;
}
.device-type-item {
  width: 300rpx;
  height: 68rpx;
  background: #F7F8FA;
  border-radius: 34rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0,0,0,0.8);
}
.device-type-item-selected {
  background: #0D7AC2;
  font-weight: 600;
  color: #FFFFFF;
}
.device-desicribtion {
  height: 340rpx;
}
.text-area-style{
  height: 100rpx !important;
}
.device-desicribtion-img {
  min-height: 452rpx;
  margin-bottom: 160rpx;
  padding-top: 10rpx;
}
.van-uploader {
  margin-left: 28rpx;
}
.device-bottom-submit-wrapper {
  background: #fff;
  height: 120rpx;
  width: 100vw;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.submit-btn {
  height: 80rpx;
  width: 600rpx;
  background: #0D7AC2;
  border-radius: 34rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  line-height: 80rpx;
  color: #FFFFFF;
  text-align: center;
}
.van-button--danger {
  background: #0D7AC2 !important;
}
.feed-back-img {
  display: block;
  width: 282rpx;
  height: 254rpx;
  margin: 0 auto;
}
.feed-back-success-text {
  width: 472rpx;
  height: 80rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0,0,0,0.7);
  line-height: 40rpx;
  text-align: center;
  margin: 0 auto 80rpx;
}
.process-wrapper {
  position: fixed;
  display: flex;
  width: 100vw;
  height: 100vh;
  top: 0;
  left: 0;
  align-items: center;
  justify-content: center;
}